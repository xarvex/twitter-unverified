{
    "manifest_version": 2,
    "name": "Twitter Unverified",
    "version": "0.0.0",
    "description": "Hide Tweets and replies from Twitter Blue users.",
    "icons": {
        "48": "resources/icon/icon.svg",
        "96": "resources/icon/icon.svg"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "twitter-unverified@xarvex.com"
        }
    },
    "permissions": [
        "storage"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "background": {
        "scripts": [
            "extension.js"
        ]
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "*://*.twitter.com/*"
            ],
            "js": [
                "inject.js"
            ]
        },
        {
            "matches": [
                "*://*.twitter.com/*"
            ],
            "js": [
                "annoyance.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "xhr.js"
    ]
}
